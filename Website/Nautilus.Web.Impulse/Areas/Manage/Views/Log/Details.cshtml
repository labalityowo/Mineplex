@model LOC.Core.LogEntry

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>LogEntry</legend>

    <div class="display-label">Date</div>
    <div class="display-field">@String.Format("{0:g}", Model.Date)</div>

    <div class="display-label">Category</div>
    <div class="display-field">@Model.Category</div>

    <div class="display-label">Message</div>
    <div class="display-field">@Model.Message</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.LogEntryId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


